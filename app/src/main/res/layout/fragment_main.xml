<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sauloaguiar.neonapplication.activities.MainActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="96dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/photo"
        app:civ_border_width="2dp"
        app:civ_border_color="#03DFFF"

        android:adjustViewBounds="false"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="168dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="96dp" />

    <TextView
        android:text="Sebastiao Da Silva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/photo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintLeft_toLeftOf="@+id/photo"
        app:layout_constraintRight_toRightOf="@+id/photo" />

    <TextView
        android:text="sebastiao@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintRight_toRightOf="@+id/photo"
        app:layout_constraintLeft_toLeftOf="@+id/photo" />

    <Button
        android:text="@string/send_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendMoneyButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:text="@string/send_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewHistoryButton"
        app:layout_constraintBottom_toTopOf="@+id/sendMoneyButton"
        android:layout_marginBottom="8dp"
        android:elevation="0dp"
        app:layout_constraintRight_toRightOf="@+id/sendMoneyButton"
        app:layout_constraintLeft_toLeftOf="@+id/sendMoneyButton" />


</android.support.constraint.ConstraintLayout>
